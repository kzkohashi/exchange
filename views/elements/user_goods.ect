<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <a href="/goods?userGoodsId=<%= @userGoods.id%>">
        <img src="<%= @userGoods.imagePath %>" alt="">
        <a>
        <div class="caption">
            <h4 class="pull-right"><%= @userGoods.price %>円</h4>
            <h4><a href="/category/brand?brandId=<%= @userGoods.brandId %>"><%= @userGoods.brandName %></a>
            </h4>
            <a href="/category/bag_type?bagTypeId=<%= @userGoods.bagTypeId %>">
            <h5><%= @userGoods.bagTypeName %></h5>
            </a>
            <a href="/user?userId=<%= @userGoods.user.id %>">
            <h6><%= @userGoods.user.username %></h6>
            </a>
            <p><%= @userGoods.description %></p>
        </div>
        <div class="ratings">
            <p class="pull-right">15 reviews</p>
            <p>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
            </p>
        </div>
        <% if !@userGoods.isMine : %>
        <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            交換する
        </button>
        <% end %>
    </div>
</div>